{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "console": "externalTerminal",
            "program": "${workspaceFolder}/bin/Debug/net7.0/Develop04.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "externalConsole": true,
            "preLaunchTask": "build"
        }
    ] 
}
